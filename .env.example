# ============================================
# LangGraph Voice-Enabled Agent Framework
# Environment Configuration Template
# ============================================

# ----------------------------------------
# LangChain / LangGraph Configuration
# ----------------------------------------
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=langgraph-voice-agents

# ----------------------------------------
# OpenAI Configuration
# Used for Whisper (STT) and TTS voice processing
# ----------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy

# ----------------------------------------
# LiveKit Configuration
# For real-time voice/video communication
# ----------------------------------------
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
LIVEKIT_ROOM_NAME=agent-session

# ----------------------------------------
# Redis Configuration
# For state management and caching
# ----------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ----------------------------------------
# SQLite Configuration
# For persistent state checkpointing
# ----------------------------------------
SQLITE_DB_PATH=./data/agent_state.db

# ----------------------------------------
# MCP Tool Server Configurations
# ----------------------------------------

# Sequential Thinking Tool
SEQUENTIAL_THINKING_SERVER_URL=http://localhost:8001
SEQUENTIAL_THINKING_API_KEY=

# Serena Code Intelligence
SERENA_SERVER_URL=http://localhost:8002
SERENA_API_KEY=

# Context7 Documentation Research
CONTEXT7_SERVER_URL=http://localhost:8003
CONTEXT7_API_KEY=

# TaskMaster Task Management
TASKMASTER_SERVER_URL=http://localhost:8004
TASKMASTER_API_KEY=

# Shrimp Task Planning
SHRIMP_SERVER_URL=http://localhost:8005
SHRIMP_API_KEY=

# Desktop Commander
DESKTOP_COMMANDER_SERVER_URL=http://localhost:8006
DESKTOP_COMMANDER_API_KEY=

# ----------------------------------------
# Agent Configuration
# ----------------------------------------
DEFAULT_AGENT_MODE=text  # Options: text, voice, hybrid
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
MAX_RETRIES=3
RETRY_DELAY_SECONDS=2

# ----------------------------------------
# Security & Rate Limiting
# ----------------------------------------
ENABLE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=60
SESSION_TIMEOUT_MINUTES=30

# ----------------------------------------
# Development & Testing
# ----------------------------------------
DEVELOPMENT_MODE=true
ENABLE_DEBUG_LOGGING=false
TEST_MODE=false
